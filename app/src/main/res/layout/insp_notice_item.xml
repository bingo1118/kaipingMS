<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/nfc_devinfo_shape"
    android:id="@+id/item_rela">

    <TextView
        android:id="@+id/grade_tv"
        android:layout_width="10dp"
        android:layout_height="75dp"
        android:background="@color/wifi_acclerate_red"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-07-25 18:16:00"
        android:layout_toRightOf="@id/grade_tv"
        android:layout_margin="5dp"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_toRightOf="@id/grade_tv"
        android:layout_below="@id/time_tv"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/grade_tv"
        android:layout_below="@id/title_tv"
        android:layout_margin="5dp"
        android:text="content"
        android:ellipsize="end"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/blue"
        android:text="详情"/>

</RelativeLayout>