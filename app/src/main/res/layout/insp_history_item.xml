<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    android:background="@drawable/nfc_devinfo_shape"
    android:id="@+id/rela">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/action_color"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:text="PointName"/>

    <TextView
        android:id="@+id/state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_tv"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:text="合格"/>


    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/state_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="ID:"
        android:textColor="@color/dialog_back_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/worker_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignLeft="@id/time_tv"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/time_tv"
        android:textColor="@color/dialog_back_color"
        android:text="巡检人:"/>
    <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:visibility="gone"/>
</RelativeLayout>