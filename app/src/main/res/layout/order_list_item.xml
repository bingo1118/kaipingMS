<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:id="@+id/line"
    android:background="@drawable/order_list_item_shape">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/title_tv"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/Black"
            android:layout_margin="5dp"
            android:text="标题"/>

        <ImageView
            android:id="@+id/deal_state_im"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/order_chuli"/>
        <TextView
            android:id="@+id/deal_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="处理"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content_tv"
        android:textSize="14sp"
        android:text="内容"
        android:singleLine="true"
        android:lines="1"
        android:layout_margin="5dp"
        android:background="#7ff0f0f0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/order_state"/>
        <TextView
            android:id="@+id/state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="状态"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/order_dealer"/>
        <TextView
            android:id="@+id/user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="接单人"/>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020-07-28 18:20:30"
            android:gravity="right"/>
    </LinearLayout>



</LinearLayout>